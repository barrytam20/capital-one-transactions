{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "removeComments": true,
    "baseUrl": "./",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "dom",
      "es6",
      "es2015.promise",
      "es2015.generator"
    ],
    "types": [
      "node"
    ]
  },
  "include": [
    "test/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": false
}